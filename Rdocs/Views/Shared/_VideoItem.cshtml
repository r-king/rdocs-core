@model DocumentaryItem
@{

    <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3 videoItem">

        <div id="@Model.Data.Name" class="youtube" onclick="playVideo('@Model.Data.Name', '@Model.Data.Url')" data-embed="AqcjdkPMPJA">
            <img src="@Model.Data.Secure_Media.Oembed.Thumbnail_Url" />
            <div class="play-button"></div>
        </div>

        <div class="videoDetails">
            <span class="badge badge-pill button-danger score">
                <i class="fa fa-arrow-up p-3"></i>
                <span>@Model.Data.Score</span>
            </span>
            <span>@Model.Data.Secure_Media.Oembed.Title</span>
        </div>
    </div>

}
